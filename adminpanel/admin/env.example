# ===============================================
# KANDUKURU SUPERMARKET - ADMIN PANEL CONFIGURATION
# ===============================================
# Copy this file to .env and update with your actual values

# ===============================================
# ENVIRONMENT CONFIGURATION
# ===============================================
NODE_ENV=production
VITE_ENV=production

# ===============================================
# API CONFIGURATION
# ===============================================
# Production API URL (replace with your deployed backend URL)
VITE_API_URL=https://api.kandukuru-supermarket.com

# Development API URL (comment out in production)
# VITE_API_URL=http://localhost:5000

# ===============================================
# APPLICATION CONFIGURATION
# ===============================================
VITE_APP_NAME=Kandukuru Supermarket Admin
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Admin Panel for Kandukuru Supermarket

# ===============================================
# BUSINESS INFORMATION
# ===============================================
VITE_STORE_NAME=Kandukuru Supermarket
VITE_STORE_ADDRESS=Andhra Pradesh Mantralaya
VITE_STORE_PHONE=+91-XXXXXXXXXX
VITE_STORE_EMAIL=support@kandukuru-supermarket.com

# ===============================================
# ADMIN CONFIGURATION
# ===============================================
VITE_ADMIN_TITLE=Kandukuru Supermarket Dashboard
VITE_ADMIN_LOGO_URL=/logo.png
VITE_ADMIN_THEME_COLOR=#1976d2

# ===============================================
# FEATURE FLAGS
# ===============================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true

# ===============================================
# DEVELOPMENT FLAGS
# ===============================================
# Set to false in production
VITE_DEBUG_MODE=false
VITE_MOCK_API=false
