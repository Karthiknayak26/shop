# ===============================================
# KANDUKURU SUPERMARKET - FRONTEND CONFIGURATION
# ===============================================
# Copy this file to .env and update with your actual values

# ===============================================
# ENVIRONMENT CONFIGURATION
# ===============================================
NODE_ENV=production
REACT_APP_ENV=production

# ===============================================
# API CONFIGURATION
# ===============================================
# Production API URL (replace with your deployed backend URL)
REACT_APP_API_URL=https://api.kandukuru-supermarket.com
REACT_APP_API_VERSION=v1

# Development API URL (comment out in production)
# REACT_APP_API_URL=http://localhost:5000

# ===============================================
# PAYMENT GATEWAY CONFIGURATION
# ===============================================
# Razorpay Live Configuration (for real transactions)
REACT_APP_RAZORPAY_KEY_ID=rzp_live_YOUR_LIVE_KEY_ID
REACT_APP_RAZORPAY_MODE=live

# For Testing (use during development)
# REACT_APP_RAZORPAY_KEY_ID=rzp_test_YOUR_TEST_KEY_ID
# REACT_APP_RAZORPAY_MODE=test

# ===============================================
# APPLICATION CONFIGURATION
# ===============================================
REACT_APP_APP_NAME=Kandukuru Supermarket
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Your Neighborhood Supermarket in Andhra Pradesh
REACT_APP_KEYWORDS=supermarket,grocery,kandukuru,andhra pradesh,online shopping

# ===============================================
# BUSINESS INFORMATION
# ===============================================
REACT_APP_STORE_NAME=Kandukuru Supermarket
REACT_APP_STORE_ADDRESS=Andhra Pradesh Mantralaya
REACT_APP_STORE_PHONE=+91-XXXXXXXXXX
REACT_APP_STORE_EMAIL=support@kandukuru-supermarket.com
REACT_APP_STORE_HOURS=Mon-Sun: 8AM-10PM

# ===============================================
# SEO & SOCIAL MEDIA
# ===============================================
REACT_APP_SITE_URL=https://kandukuru-supermarket.com
REACT_APP_FACEBOOK_URL=https://facebook.com/kandukuru-supermarket
REACT_APP_INSTAGRAM_URL=https://instagram.com/kandukuru_supermarket
REACT_APP_WHATSAPP_NUMBER=+91XXXXXXXXXX

# ===============================================
# GOOGLE SERVICES
# ===============================================
REACT_APP_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ===============================================
# FEATURE FLAGS
# ===============================================
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_OFFLINE_MODE=true

# ===============================================
# PERFORMANCE CONFIGURATION
# ===============================================
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_CACHE_DURATION=3600000
REACT_APP_MAX_FILE_SIZE=5242880

# ===============================================
# ERROR TRACKING
# ===============================================
REACT_APP_SENTRY_DSN=your_sentry_dsn_for_frontend

# ===============================================
# DEVELOPMENT FLAGS
# ===============================================
# Set to true only in development
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_API=false
