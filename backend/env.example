# ===============================================
# KANDUKURU SUPERMARKET - BACKEND CONFIGURATION
# ===============================================
# Copy this file to .env and update with your actual values

# ===============================================
# ENVIRONMENT CONFIGURATION
# ===============================================
NODE_ENV=production
PORT=5000
APP_NAME=Kandukuru Supermarket
API_VERSION=v1

# ===============================================
# DATABASE CONFIGURATION
# ===============================================
# Production MongoDB Atlas URL (replace with your cluster URL)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kandukuru-supermarket?retryWrites=true&w=majority

# Local Development (comment out in production)
# MONGODB_URI=mongodb://localhost:27017/kandukuru-supermarket

# ===============================================
# SECURITY CONFIGURATION
# ===============================================
# Generate a strong JWT secret key (use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ===============================================
# PAYMENT GATEWAY CONFIGURATION
# ===============================================
# Razorpay Live Configuration (for real transactions)
RAZORPAY_KEY_ID=rzp_live_YOUR_LIVE_KEY_ID
RAZORPAY_KEY_SECRET=YOUR_LIVE_KEY_SECRET
RAZORPAY_MODE=live
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# For Testing (use during development)
# RAZORPAY_KEY_ID=rzp_test_YOUR_TEST_KEY_ID
# RAZORPAY_KEY_SECRET=YOUR_TEST_KEY_SECRET
# RAZORPAY_MODE=test

# ===============================================
# EMAIL CONFIGURATION
# ===============================================
# Gmail SMTP Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_business_email@gmail.com
EMAIL_PASS=your_app_specific_password

# SendGrid (Alternative email service)
# SENDGRID_API_KEY=your_sendgrid_api_key
# EMAIL_FROM=noreply@kandukuru-supermarket.com

# ===============================================
# FILE UPLOAD CONFIGURATION
# ===============================================
# Max file size (in bytes) - 5MB
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ===============================================
# RATE LIMITING CONFIGURATION
# ===============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===============================================
# LOGGING CONFIGURATION
# ===============================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ===============================================
# EXTERNAL API CONFIGURATION
# ===============================================
# Product API Configuration (if using external APIs)
RAPID_API_HOST=your_api_host
RAPID_API_KEY=your_api_key

# ===============================================
# BUSINESS CONFIGURATION
# ===============================================
STORE_NAME=Kandukuru Supermarket
STORE_ADDRESS=Andhra Pradesh Mantralaya
STORE_PHONE=+91-XXXXXXXXXX
STORE_EMAIL=support@kandukuru-supermarket.com
DELIVERY_RADIUS_KM=10

# ===============================================
# ADMIN CONFIGURATION
# ===============================================
ADMIN_EMAIL=admin@kandukuru-supermarket.com
ADMIN_PASSWORD=your_secure_admin_password

# ===============================================
# MONITORING & ANALYTICS
# ===============================================
# Error tracking (Sentry)
SENTRY_DSN=your_sentry_dsn

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
